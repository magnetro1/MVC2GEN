{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": [ "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "import/extensions": "off",
    "no-console": "warn",
    "no-continue": "warn",
    "guard-for-in": "off",
    "no-restricted-syntax": "off",
    "max-len": [ "error", {
        "code": 100,
        "comments": 100
      }
    ],
    "radix": "off" // wow
  }
}
