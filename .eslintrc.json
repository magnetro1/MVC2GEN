{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": [ "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "max-len": [ "error", {
        "code": 100,
        "comments": 100
      }
    ],
    "no-unused-expressions": [ "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "no-console": "warn",
    "no-continue": "warn",
    "import/extensions": "off",
    "guard-for-in": "off",
    "no-restricted-syntax": "off",
    "prefer-destructuring": "off",
    "no-param-reassign": "off",
    "no-bitwise": "off",
    "radix": "off" // wow
  }
}
